<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
          crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styleForEl.css">
    <title>Document</title>
</head>
<body style="background: linear-gradient(to right, #F6EFD2, #ffb300);">
    
    <partial name="Navbar" />

    @if (!ViewData.ModelState.IsValid)
    {
            <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                        <span>@error.ErrorMessage</span>
            }
            </div>
    }

    <form asp-action="AuthorizationUser" asp-controller="home" method="post" style="display:flex; align-items: center; justify-content: center; flex-direction: column; margin-top: 5%;">
        <div class="mb-3 w-25">
            <label for="Email" class="form-label">Email</label>
            <input type="email" class="form-control" name="Email" id="Email" aria-describedby="emailHelp">
            <div id="emailHelp" class="form-text">Никому не говорите пароль и почту</div>
        </div>
        <div class="mb-3 w-25">
            <label for="Password" class="form-label">Пароль</label>
            <input type="password" id="Password" name="Password" class="form-control">
        </div>
        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">Я тебя запомнил</label>
        </div>
        <button type="submit" asp-action="AuthorizationUser" asp-controller="home" class="btn btn-primary w-25">Войти</button>
    </form>
</body>
</html>