@model MyViewModel
@{
    //ViewData["Title"] = "Список книг";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-aFq/bzH65dt+w6FI2ooMVUpc+21e0SRygnTpmBvdBgSdnuTN7QbdgL+OapgHtvPp" crossorigin="anonymous">
    <title>Document</title>
</head>
<body>
    <form asp-action="change" asp-controller="home" asp-route-id="@Model.Book.BookId" method="post" target="_self">
        
        <h2>Введите данные для редактирования</h2>
        <a asp-action="IndexSorted">Menu</a>
            <fieldset>
            <legend>Book №@Model.Book.BookId</legend>
                <ul>
                    <li>
                        <label for="name">Tittle: </label>
                    <input type="text" value="@Model.Book.Title" name="Title" id="name" required>
                    </li>
                    <br>
                    <li>
                        <label for="age">Published On: </label>
                        <input type="date" asp-for="@Model.Book.PublishedOn" name="PublishedOn" id="PublishedOn" min="0" max="125">
                    </li>
                    <br>
                    <li>
                        <label for="message">Description: </label>
                        <br>
                        <textarea name="Description" asp-for="@Model.Book.Description" aria-valuenow="@Model.Book.Description" id="message"></textarea>
                    </li>
                    <li>
                        <label for="Author">Author: </label>
                        <br>
                        <input type="text" name="Author" value="@Model.Book.Author.Name" id="Author" disabled>
                    </li>
                    <li>
                        @foreach (var author in Model.Authors)
                        {
                            <table>
                                <tr>
                                    <td style="border: 1px solid black;">@author.AuthorId</td>
                                    <td style="border: 1px solid black;">@author.Name</td>
                                    <td><input name="AuthorId" id="AuthorId" value="@author.AuthorId" type="radio"></td>
                                    @*<td><a asp-route-id="@author.AuthorId" asp-action="change"><button asp-controller="Home" type="button">Изменить</button></a></td>*@
                                </tr>
                            </table>
                        }
                    </li>
                </ul>
            </fieldset>
        
        <button type="submit">Изменить</button>
    </form>
</body>
</html>